@using SFA.DAS.Payments.PeriodEnd.TestEndpoint.Models
@model SendPeriodEndRequest

@{
    ViewData["Title"] = "Home Page";
}

<div class="card card-outline-secondary">
    <div class="card-header">
        <h3 class="mb-0">Period End Form</h3>
    </div>
    <div class="card-body">
        <form class="form" role="form" autocomplete="off" asp-action="SendPeriodEnd" asp-controller="TestEndPoint"  >
            <div class="form-group">
                <label asp-for="Ukprn" >Ukprn</label>
                <input type="number" asp-for="Ukprn" class="form-control"  required="">
                <div class="invalid-feedback">Please enter ukprn</div>
            </div>
            <div class="form-group">
                <label asp-for="AcademicYear" >Academic Year</label>
                <input type="number"asp-for="AcademicYear" class="form-control">
                <div class="invalid-feedback">Please enter a academic year</div>
            </div>
           
            <input type="submit" class="btn btn-success btn-lg float-right" id="btnSend">
        </form>
    </div>

</div>
